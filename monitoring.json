{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "#e7e7e7",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "gnetId": null,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "panels": [
    {
      "datasource": "Prometheus",
      "type": "graph",
      "title": "HTTP Requests per Second",
      "targets": [
        {
          "expr": "rate(http_requests_total[1m])",
          "legendFormat": "{{method}} {{endpoint}}",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
    },
    {
      "datasource": "Prometheus",
      "type": "graph",
      "title": "Average Response Time per Endpoint (s)",
      "targets": [
        {
          "expr": "http_response_duration_seconds_sum / http_response_duration_seconds_count",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
    },
    {
      "datasource": "Prometheus",
      "type": "graph",
      "title": "CPU Usage (per core)",
      "targets": [
        {
          "expr": "rate(node_cpu_seconds_total{mode!='idle'}[1m])",
          "legendFormat": "{{cpu}}",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 6, "w": 12, "x": 0, "y": 8}
    },
    {
      "datasource": "Prometheus",
      "type": "graph",
      "title": "Memory Available",
      "targets": [
        {
          "expr": "node_memory_MemAvailable_bytes",
          "legendFormat": "available",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 6, "w": 12, "x": 12, "y": 8}
    },
    {
      "datasource": "Prometheus",
      "type": "graph",
      "title": "Disk Space Available",
      "targets": [
        {
          "expr": "node_filesystem_avail_bytes",
          "legendFormat": "{{mountpoint}}",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 6, "w": 12, "x": 0, "y": 14}
    },
    {
      "datasource": "Prometheus",
      "type": "graph",
      "title": "Network Traffic (Bytes/sec)",
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total[1m])",
          "legendFormat": "receive {{device}}",
          "refId": "A"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total[1m])",
          "legendFormat": "transmit {{device}}",
          "refId": "B"
        }
      ],
      "gridPos": {"h": 6, "w": 12, "x": 12, "y": 14}
    }
  ],
  "schemaVersion": 37,
  "style": "dark",
  "tags": ["Node.js","Node Exporter","Prometheus"],
  "templating": {"list": []},
  "time": {"from": "now-6h","to": "now"},
  "timepicker": {},
  "timezone": "browser",
  "title": "App + Node Exporter Dashboard",
  "version": 1
}
